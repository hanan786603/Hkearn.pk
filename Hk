  </main>  <!-- modal: ad viewer -->  <div class="modal" id="adModal">
    <div class="panel">
      <div style="display:flex;justify-content:space-between;align-items:center">
        <div>
          <div style="font-weight:700" id="adTitle">Ad Title</div>
          <div class="small-muted" id="adDesc">Ad description / advertiser</div>
        </div>
        <div style="text-align:right">
          <div class="small-muted">Timer</div>
          <div style="font-weight:700;font-size:20px" id="adTimer">0</div>
        </div>
      </div>
      <div style="margin-top:12px">
        <div style="background:rgba(255,255,255,0.02);padding:12px;border-radius:8px;text-align:center">Ad content / iframe placeholder</div>
      </div>
      <div style="display:flex;justify-content:flex-end;margin-top:12px;gap:8px">
        <button class="btn" onclick="closeAd()">Close</button>
        <button class="cta" id="claimBtn" onclick="claimAd()" disabled>Claim</button>
      </div>
    </div>
  </div>  <!-- modal: login/register -->  <div class="modal" id="loginModal">
    <div class="panel">
      <div style="display:flex;justify-content:space-between;align-items:center">
        <div style="font-weight:700">Login / Register (Demo)</div>
        <button class="btn" onclick="closeLogin()">Close</button>
      </div>
      <div style="margin-top:12px">
        <form class="login-form" onsubmit="event.preventDefault();loginDemo()">
          <input id="inputUser" placeholder="Username (demo)" required />
          <input id="inputEmail" placeholder="Email (demo)" required />
          <select id="userType"><option value="member">Member</option><option value="advertiser">Advertiser</option></select>
          <div style="display:flex;gap:8px;justify-content:flex-end">
            <button class="btn" type="button" onclick="closeLogin()">Cancel</button>
            <button class="cta" type="submit">Save</button>
          </div>
        </form>
      </div>
    </div>
  </div>  <script>
    // Demo data: replace with server values in production
    const demoAds = [
      {id:1,title:'Visit Shop — Short',desc:'Sponsored — 10s viewing',seconds:10,payout:0.02,type:'short'},
      {id:2,title:'Product Review — Long',desc:'Sponsored — 30s viewing',seconds:30,payout:0.10,type:'long'},
      {id:3,title:'Survey Invite — Short',desc:'Sponsored — 15s viewing',seconds:15,payout:0.03,type:'short'},
      {id:4,title:'Download App — Long',desc:'Sponsored — 25s viewing',seconds:25,payout:0.08,type:'long'}
    ];

    // UI refs
    const adsList = document.getElementById('adsList');
    const balanceEl = document.getElementById('balance');
    const topBalance = document.getElementById('topBalance');

    // basic localStorage demo balance & user
    function loadState(){
      const bal = parseFloat(localStorage.getItem('ptc_balance')||'0');
      const user = JSON.parse(localStorage.getItem('ptc_user')||'null');
      balanceEl.textContent = '$' + bal.toFixed(2);
      topBalance.textContent = '$' + bal.toFixed(2);
      document.getElementById('username').textContent = user ? user.name : 'Guest';
    }

    function saveBalance(v){
      localStorage.setItem('ptc_balance', String(v));
      loadState();
    }

    function renderAds(list){
      adsList.innerHTML = '';
      list.forEach(ad=>{
        const el = document.createElement('div'); el.className='ad card';
        el.innerHTML = `
          <h4>${ad.title}</h4>
          <div class="meta">${ad.desc} • <span class="price">$${ad.payout.toFixed(2)}</span></div>
          <div style="display:flex;justify-content:space-between;align-items:center">
            <div class="small-muted">${ad.seconds}s view</div>
            <div style="display:flex;gap:8px">
              <button class="btn" onclick="openAd(${ad.id})">View</button>
              <button class="btn" onclick="reportAd(${ad.id})">Report</button>
            </div>
          </div>
        `;
        adsList.appendChild(el);
      });
    }

    function filterAds(kind){
      if(kind==='all') renderAds(demoAds);
      else renderAds(demoAds.filter(a=>a.type===kind));
    }

    // ad viewing flow (demo) — in production: implement server verification
    let activeAd = null; let adTimerInterval = null; let remaining = 0;
    function openAd(id){
      activeAd = demoAds.find(a=>a.id===id);
      if(!activeAd) return;
      document.getElementById('adTitle').textContent = activeAd.title;
      document.getElementById('adDesc').textContent = activeAd.desc;
      remaining = activeAd.seconds;
      document.getElementById('adTimer').textContent = remaining;
      document.getElementById('claimBtn').disabled = true;
      document.getElementById('adModal').classList.add('open');
      adTimerInterval = setInterval(()=>{
        remaining -= 1;
        document.getElementById('adTimer').textContent = remaining;
        if(remaining<=0){
          clearInterval(adTimerInterval);
          document.getElementById('claimBtn').disabled = false;
        }
      },1000);
    }

    function closeAd(){
      document.getElementById('adModal').classList.remove('open');
      clearInterval(adTimerInterval);
      activeAd = null;
    }

    function claimAd(){
      if(!activeAd) return;
      // award payout to balance
      const bal = parseFloat(localStorage.getItem('ptc_balance')||'0');
      const next = bal + activeAd.payout;
      saveBalance(next);
      alert('You earned $' + activeAd.payout.toFixed(2) + ' — balance updated.');
      closeAd();
    }

    function reportAd(id){
      alert('Reported ad #' + id + '. In production this would notify admin.');
    }

    // login modal logic (demo)
    document.getElementById('openLogin').addEventListener('click', ()=>{
      document.getElementById('loginModal').classList.add('open');
    });
    function closeLogin(){document.getElementById('loginModal').classList.remove('open');}
    function loginDemo(){
      const name = document.getElementById('inputUser').value.trim();
      const email = document.getElementById('inputEmail').value.trim();
      if(!name || !email) return alert('Enter details');
      const u = {name,email,joined:new Date().toISOString()};
      localStorage.setItem('ptc_user', JSON.stringify(u));
      closeLogin(); loadState();
      alert('Demo user saved — this is local only.');
    }

    // small demo helpers
    function simulateReferral(){
      const bal = parseFloat(localStorage.getItem('ptc_balance')||'0');
      saveBalance(bal + 0.50);
      alert('Simulated referral bonus: $0.50');
    }
    function resetDemo(){
      if(confirm('Reset demo data?')){localStorage.removeItem('ptc_balance');localStorage.removeItem('ptc_user');loadState();}
    }

    // init
    (function init(){
      if(!localStorage.getItem('ptc_balance')) localStorage.setItem('ptc_balance','0');
      renderAds(demoAds);
      loadState();
    })();

    // expose to global for demo buttons
    window.filterAds = filterAds; window.openAd=openAd; window.claimAd=claimAd; window.closeAd=closeAd; window.reportAd=reportAd; window.simulateReferral=simulateReferral; window.resetDemo=resetDemo; window.closeLogin=closeLogin;
  </script></body>
